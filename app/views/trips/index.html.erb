<h1>Listing trips</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Hour</th>
    <th>Starting point</th>
    <th>Destination</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.date.strftime("%d-%m-%Y") %></td>
    <td><%= trip.hour.strftime("%H:%M") %></td>
    <td><%= trip.starting_point %></td>
    <td><%= trip.destination.name %></td>
    <td><%= trip.event.name %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

