<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Trips:</b>
  <%- @event.trips.map do |trip| %>
    <%= "#{Destination.find(trip.destination).name}: #{trip.date};" %>
  <% end %>
</p>

<div>
  <%= button_to 'Edit', edit_event_path(@event), class: "btn btn-warning btn-primary", style: "float: left; display: block", method: :get %>
  <%= button_to 'Back', events_path, class: "btn btn-black btn-primary", style: "float: left; display: block; margin-left: 10px", method: :get %>
</div>
