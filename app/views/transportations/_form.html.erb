<%= form_for(@transportation) do |f| %>
  <% if @transportation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transportation.errors.count, "error") %> prohibited this transportation from being saved:</h2>

      <ul>
      <% @transportation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :priority %><br/ >
    <%= f.select :priority, options_for_select((1..Transportation.count + 1).to_a - Transportation.all.map { |transportation| transportation.priority unless transportation == @transportation }, @transportation.priority) %>
  </div>
  <div class="field">
    <%= f.label :description %><br/ >
    <%= f.text_field :description %>
  </div>
  <br/ >
  <div class="actions"  style="float: left; display: inline">
    <%= f.submit nil, class: 'btn btn-primary btn-success' %>
  </div>
<% end %>
<%= button_to 'Back', transportations_path, class: "btn btn-black btn-primary", style: "display: inline; margin: -12px 0px 0px 20px;", method: :get %>
